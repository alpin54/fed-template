//-------------------------------------------------------------------------------
  @name: Footer
  -------------------------------------------------------------------------------//

-
  footer = {
    logo: 'metro.png',
    alt: 'Metro Klinik',
    copyright: '&copy; 2022 RZF Software. All Rights Reserved',
    sosmed: [
      {
        to: '#facebook',
        iconClass: 'facebook',
      },
      {
        to: '#instagram',
        iconClass: 'instagram',
      },
      {
        to: '#twitter',
        iconClass: 'twitter',
      },
      {
        to: '#linkedIn',
        iconClass: 'linkedIn'
      }
    ]
  }

//footer
.footer
  .container
    .footer__content
      ='\n'
      a.footer__logo(href='index.html')
        ='\n'
        img.footer__logo__el(src='assets/img/logo/'+footer.logo alt=footer.alt)/
        ='\n'
      .footer__sosmed
        ul.footer__sosmed__list
          each val in footer.sosmed
            li.footer__sosmed__item
              ='\n'
              a.footer__sosmed__link(href=val.to class=val.iconClass target='_blank')
                ='\n'
                i(class='mi-'+val.iconClass)
                ='\n'
      p.footer__copyright
        | !{footer.copyright}
='\n'
//end-footer
